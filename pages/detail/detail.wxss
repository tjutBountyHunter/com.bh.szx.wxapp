  display: flex;
  width: 97px;
  height: 40px;
  margin-top: 5px;
  margin-right: 15px;

  background-color: #e82928;
  justify-content: center;
  text-align: center;
  align-items: center;
}
.personal_tabbar_hd{
  display: flex;
  flex-direction: row;
